<div class="header">
    <div class="">
        {{> logo}}
    </div>

    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</div>

<main class="main">
    {{#with info}}
    <div class="info_content">
        <h1 class="info_title"> {{title}} </h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form>
        <h2 class="form_title">{{title}} </h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="checkbox.name" id="checkbox.name">
            <div> </div>
            <label for="checkbox.name">{{checkbox.label}} </label>
        </div>

        <button type="submit" class="form_button ">{{button}} </button>
        <p class="form_info">{{info}} </p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="updates">
    <h1 class="updates_title">{{title}} </h1>
    {{#each list}}
    <div class="list">
        <img class="list_images">
        <div class="list_text">
            <p class="list_nickname">{{nickname}} </p>
            <p class="list_description">{{description}}</p>
        </div>
    </div>
    {{/each}}
    {{#with show_all}}
    <a href="{{url}}" class="show_all_link"> {{text}} </a>
    {{/with}}
</div>
{{/with}}



{{#with expirience}}
<div class="expirience">
    <span class="expirience_badge">{{badge}} </span>
    <h1 class="expirience_title">{{title}} </h1>

    <form class="expirience_list">
        {{#each list}}
        <div>
            <strong>{{name}} </strong>
            <p>{{details}} </p>
        </div>
        {{/each}}
    </form>

</div>
{{/with}}


<footer class="page_block">
    <div class="footer">
        <div>
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
        {{/each}}
    </div>
</footer>