<div class="header">
    <div class="">
        {{> logo}}
    </div>

    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</div>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="main image" class="main_image">
    <div class="main_content">
        <h1 class="main_heading"> {{heading}} </h1>
        <p class="main_description">{{description}}</p>
        <a class="button card_button" href="{{href}}">{{button}} </a>
    </div>
</div>
{{/with}}

<main class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</main>

<div class="actions">
    {{#each actions}}

    <div class="form_content">
        <h3 class="form_title">{{heading}} </h3>
        <a class="button form_button" href="{{url}}">{{text}} </a>
    </div>

    {{/each}}
</div>

<footer class="page_block">
    <div class="footer">
        <div>
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
        {{/each}}
    </div>
</footer>