<div class="header">
    <div class="logo">
        <span class="badge text-bg-primary">Logo</span>
    </div>

    <nav class="header_nav ">
        {{#each header.links}}
        <a class='nav_link link_animation' href='{{url}}'>
            {{text}}</a>

        {{/each}}
    </nav>
</div>

<div class="ad">
    {{#with header.ad}}
    <a class='nav_link link_ad' href='{{url}}'> {{text}}</a>
    {{/with}}

</div>



{{#with hero}}
<div class="hero">
    <div class="hero_content">
        <h1 class="hero_title"> {{title}} </h1>
        <p class="hero_text">{{description}}</p>
        {{#with button}}
        <button class="form_button " href="{{url}}"> {{text}} </button>
        {{/with}}
    </div>
</div>
{{/with}}

<div class="about">
    {{#with about}}
    <h2 class="about_heading">{{heading}} </h2>
    <p class="about_info">{{info}} </p>
    {{/with}}
</div>

<main class="articles">
    <div class="our_articles">
        <h2 class="our_name">Our Articles </h2>
        <button class="our_button " href="#"> View all </button>
    </div>

    <div class="card">
        {{#each articles}}
        <div class="articles_card">
            <img src="{{photo}}" alt="card image" class="card_image" id="{{id}}">
            <div class="{{#if isNew}}isNew{{/if}} ">
                <span>New</span>
            </div>
            <h2 class="card_name">{{name}} </h2>
            <p class="card_description">{{description}} </p>
            <button class="form_button " href="#"> Read all </button>
        </div>
        {{/each}}
    </div>

</main>



{{#with footer}}
<footer class="footer">
    <div class="footer_copyright">{{copyright}}</div>
    <div class="footer_title">
        {{#each pages}}
        <a href="{{path}}" class="nav_link">{{name}}</a>
        {{/each}}
    </div>
</footer>
{{/with}}